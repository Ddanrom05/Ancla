{
  "manifest_version": 3,
  "name": "Ancla",
  "version": "1.0",
  "description": "Extensi√≥n que detecta grooming y ciberacoso usando Gemini AI",
  "permissions": ["storage", "scripting", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
